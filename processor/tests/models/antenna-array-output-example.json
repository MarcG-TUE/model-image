{
    "canvas": {
        "width": 585,
        "height": 210
    },
    "data":[
        ["parameters", [
            {
                "name": "alpha",
                "type": "range",
                "initialValue": 12,
                "description": "angle of second source",
                "step": 1,
                "range": [-90, 90]
            },
            {
                "name": "power",
                "type": "range",
                "step": 0.02,
                "initialValue": 1,
                "description": "relative strength of second source",
                "range": [0.1, 2]
            }]
        ]
    ],
    "elements": [
        ["subFigure", {
            "elements":[
                ["function-plot", {
                    "function": "(alpha)=>SceneData.cAbs(SceneData.cInnerProduct(SceneData.responseVector(7,0.5,alpha),SceneData.cAddVectors(SceneData.responseVector(7,0.5,0),SceneData.cScaleVector(SceneData.responseVector(7,0.5,30),[SceneData.parameters.power,0]))))",
                    "width": 250,
                    "height": 150,
                    "origin": [150, 175],
                    "xDom": [-90, 90],
                    "yDom": [0, 7.5],
                    "options":{
                        "tickValuesX": [-90,-75,-60,-45,-30,-15,0,15,30,45,60,75,90],
                        "tickValuesY": [0, 1, 2, 3, 4, 5, 6, 7]
                    },
                    "content": [
                        ["lines", {
                            "lines":[{
                                "p1": [0,0],
                                "p2": [0,7.5]
                            },{
                                "p1": [30,0],
                                "p2": [30,7.5]
                            }],
                            "attributes": {
                                "stroke": "#ff0000",
                                "stroke-dasharray": "4 3"
                            }
                        }]
                    ],
                    "updateOn": ["power"]
                }],
                ["function-plot", {
                    "function": "(alpha)=>SceneData.cAbs(SceneData.cInnerProduct(SceneData.responseVector(7,0.5,alpha),SceneData.cAddVectors(SceneData.responseVector(7,0.5,0),SceneData.cScaleVector(SceneData.responseVector(7,0.5,SceneData.parameters.alpha),[SceneData.parameters.power,0]))))",
                    "width": 250,
                    "height": 150,
                    "origin": [450, 175],
                    "xDom": [-90, 90],
                    "yDom": [0, 7.5],
                    "options":{
                        "tickValuesX": [-90,-75,-60,-45,-30,-15,0,15,30,45,60,75,90],
                        "tickValuesY": [0, 1, 2, 3, 4, 5, 6, 7]
                    },
                    "content": [
                        ["lines", {
                            "lines":[{
                                "p1": "[0,0]",
                                "p2": "[0,7.5]"
                            },{
                                "p1": "[SceneData.parameters.alpha,0]",
                                "p2": "[SceneData.parameters.alpha,7.5]"
                            }],
                            "attributes": {
                                "stroke": "#ff0000",
                                "stroke-dasharray": "4 3"
                            }
                        }]
                    ],
                    "updateOn": ["alpha","power"]
                }]
            ]
        }],
        ["latex-texts", {
            "texts": [
                {
                    "text": "|({\\bf{}a}^H(\\alpha),{\\bf{}x})|",
                    "position": [5,5]
                },
                {
                    "text": "M=7",
                    "position": [45,45]
                },
                {
                    "text": "\\Delta=0.5",
                    "position": [45,65]
                },
                {
                    "text": "\\alpha_1=0^{\\circ}",
                    "position": [45,85]
                },
                {
                    "text": "\\alpha_1=30^{\\circ}",
                    "position": [45,105]
                },
                {
                    "text": "\\text{angle }\\alpha\\text{ [degrees]}",
                    "position": [186,193]
                },
                {
