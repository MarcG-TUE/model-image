{
    "canvas": {
        "width": 585,
        "height": 210
    },
    "data":[
        ["parameters", [
            {
                "name": "M",
                "type": "range",
                "initialValue": 7,
                "description": "number of antenna elements",
                "step": 1,
                "range": [1, 9]
            },
            {
                "name": "Delta",
                "type": "range",
                "step": 0.02,
                "initialValue": 0.5,
                "description": "spacing between antenna elements in wavelengths",
                "range": [0.1, 2]
            },
            {
                "name": "alpha",
                "type": "range",
                "step": 1,
                "initialValue": 30,
                "description": "angle of the response vector beam former",
                "range": [-90, 90]
            }]
        ]
    ],
    "elements": [
        ["subFigure", {
            "elements":[
                ["response-graph", {
                    "antennaArray": {
                        "M": "SceneData.parameters.M",
                        "Delta": "SceneData.parameters.Delta"
                    },
                    "beamFormer": "SceneData.responseVector(SceneData.parameters.M,SceneData.parameters.Delta,SceneData.parameters.alpha)",
                    "width": 250,
                    "height": 150,
                    "origin": [150, 175],
                    "yDom": "[0, SceneData.parameters.M+0.05]",
                    "options":{
                        "tickValuesY": "SceneData.linSpaceDelta(0,SceneData.parameters.M, 1)",
                        "numberOfSamples": 750
                    },
                    "content": [
                        ["line", {
                            "p1": "[SceneData.parameters.alpha,0]",
                            "p2": "[SceneData.parameters.alpha,SceneData.parameters.M]",
                            "attributes": {
                                "stroke": "#ff0000",
                                "stroke-dasharray": "4 3"
                            },
                            "updateOn": ["alpha"],
                            "updateOrder": 200
                        }]
                    ],
                    "updateOn": ["M", "Delta", "alpha"]
                }
                ],
                ["response-graph-polar", {
                    "antennaArray": {
                        "M": "SceneData.parameters.M",
                        "Delta": "SceneData.parameters.Delta"
                    },
                    "beamFormer": "SceneData.responseVector(SceneData.parameters.M,SceneData.parameters.Delta,SceneData.parameters.alpha)",
                    "width": 225,
                    "height": 150.62,
                    "origin": [450, 100],
                    "rMax": "SceneData.parameters.M+0.05",
                    "scale": "12.5*7/SceneData.parameters.M",
                    "options":{
                        "tickValuesR": "SceneData.linSpaceDelta(1,SceneData.parameters.M-1.5, 2)",
                        "stroke-width": 1.0,
                        "fill": "#cccccc",
                        "showAngles": false,
                        "fontSize": "11px",
                        "numberOfSamples": 750
                    },
                    "content": [
                        ["line", {
                            "p1": "[0,0]",
                            "p2": "[SceneData.parameters.alpha,SceneData.parameters.M*1.15]",
                            "attributes": {
                                "stroke": "#ff0000",
                                "stroke-dasharray": "4 3"
                            },
                            "updateOn": ["alpha"],
                            "updateOrder": 200
                        }],
                        ["arc", {
                            "center": [0, 0],
                            "radius": "SceneData.parameters.M*0.6",
                            "start-angle": 0,
                            "end-angle": "SceneData.parameters.alpha",
                            "attributes": {
                                "stroke": "#ff0000",
                                "stroke-width": 1.0,
                                "stroke-dasharray": "4 3"
                            }
                        }]
                    ],
                    "updateOn": ["M", "Delta", "alpha"]
                }
                ]
            ]
        }],
        ["subFigure", {
            "elements":[
                ["latex-texts", {
                    "texts": [
                        {
                            "text": "|({\\bf{}a}(\\alpha),{\\bf{}w})|",
                            "position": [5,5]
                        },
                        {
                            "text": "eval:`M=${SceneData.parameters.M}`",
                            "position": [45,45],
                            "updateOn": ["M"]
                        },
                        {
                            "text": "eval:`\\\\Delta=${SceneData.parameters.Delta}`",
                            "position": [45,65],
                            "updateOn": ["Delta"]
                        },
                        {
                            "text": "\\text{angle }\\alpha\\text{ [degrees]}",
                            "position": [186,193]
                        },
                        {
                            "text": "|({\\bf{}a}(\\alpha),{\\bf{}w})|",
                            "position": [505,30]
                        },
                        {
                            "text": "eval:`M=${SceneData.parameters.M}`",
                            "position": [345,130],
                            "updateOn": ["M"]
                        },
                        {
                            "text": "eval: `\\\\Delta=${SceneData.parameters.Delta}`",
                            "position": [345,150],
                            "updateOn": ["Delta"]
                        }
                        ]
                    }
                ],
                ["latex-texts", {
                    "texts": [
                        {
                            "text": "eval:`\\\\alpha=${SceneData.parameters.alpha}^{\\\\circ}`",
                            "position": [205,30],
                            "updateOn": ["alpha"]
                        },
                        {
                            "text": "eval:`\\\\alpha=${SceneData.parameters.alpha}^{\\\\circ}`",
                            "position": [515,80],
                            "updateOn": ["alpha"]
                        }
                        ],
                        "color": "#ff0000"
                    }
                ]

            ]
        }]
    ]
}