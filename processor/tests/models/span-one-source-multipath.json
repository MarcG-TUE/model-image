{
    "canvas": {
        "width": 335,
        "height": 235
    },
    "data": [
        ["parameters", [
            {
                "name": "alpha1",
                "type": "range",
                "initialValue": -20,
                "description": "angle of arrival 1",
                "step": 1,
                "range": [-90, 90]
            },
            {
                "name": "alpha2",
                "type": "range",
                "initialValue": 30,
                "description": "angle of arrival 2",
                "step": 1,
                "range": [-90, 90]
            },
            {
                "name": "beta",
                "type": "range",
                "initialValue": 0.33,
                "description": "relative strength",
                "step": 0.01,
                "range": [0.1, 10]
            }]
        ],
        ["variables", [
            {
                "name": "responseVector1",
                "value": "SceneData.projectedResponseVector(5, 0.5, SceneData.parameters.alpha1)",
                "updateOn": ["alpha1"]
            },
            {
                "name": "responseVector2",
                "value": "SceneData.projectedResponseVector(5, 0.5, SceneData.parameters.alpha2)",
                "updateOn": ["alpha2"]
            },
            {
                "name": "mpResponseVector",
                "value": "SceneData.addPoint3D(SceneData.variables['responseVector1'],SceneData.scalePoint3D(SceneData.variables['responseVector2'],SceneData.parameters.beta))",
                "updateOn": ["alpha1", "alpha2", "beta"]
            }
            ]
        ]
    ],
    "elements": [
        [ "axis-3d",
            {
                "type": "Perspective8Q",
                "position": [5,5,3.5],
                "target": [0,0,0],
                "fieldOfView": 45,
                "xDom": [-1.5,1.5],
                "yDom": [-1.5,1.5],
                "zDom": [-1.5,1.5],
                "center": [155,120],
                "scale": 650,
                "content": [
                    ["span2D", {
                        "axis1": "SceneData.scalePoint3D(SceneData.variables['mpResponseVector'], 1.7)",
                        "axis2": "SceneData.scalePoint3D(SceneData.variables['responseVector2'], 0.075)",
                        "updateOn": ["alpha1", "alpha2", "beta"]
                    }],
                    ["lines", {
                        "lines": [
                            {
                                "p1": "SceneData.scalePoint3D(SceneData.variables['responseVector1'], 0.7)",
                                "p2": "SceneData.scalePoint3D(SceneData.variables['mpResponseVector'], 0.7)"
                            },
                            {
                                "p1": "SceneData.scalePoint3D(SceneData.variables['responseVector2'], 0.7*SceneData.parameters.beta)",
                                "p2": "SceneData.scalePoint3D(SceneData.variables['mpResponseVector'], 0.7)"
                            },
                            {
                                "p1": "SceneData.scalePoint3D(SceneData.variables['mpResponseVector'], -1.7)",
                                "p2": "SceneData.scalePoint3D(SceneData.variables['mpResponseVector'], 1.7)"
                            }
                        ],
                        "attributes": {
                            "stroke":  "#aa00aa",
                            "stroke-width": 1.0,
                            "stroke-dasharray": "4 1"
                        },
                        "updateOn": ["alpha1", "alpha2", "beta"]
                    }],
                    ["vector", {
                        "p1": [0,0,0],
                        "p2": "SceneData.variables['responseVector1']",
                        "attributes": {
                            "stroke":  "#0000aa",
                            "stroke-width": 1.5
                        },
                        "updateOn": ["alpha1"]
                    }],
                    ["vector", {
                        "p1": [0,0,0],
                        "p2": "SceneData.variables['responseVector2']",
                        "attributes": {
                            "stroke":  "#aa0000",
                            "stroke-width": 1.5
                        },
                        "updateOn": ["alpha2"]
                    }],
                    ["vectors", {
                        "vectors": [
                            {
                                "p1": [0,0,0],
                                "p2": "SceneData.scalePoint3D(SceneData.variables['mpResponseVector'], 0.7)"
                            },
                            {
                                "p1": [0,0,0],
                                "p2": "SceneData.scalePoint3D(SceneData.variables['mpResponseVector'], -0.7)"
                            },
                            {
                                "p1": [0,0,0],
                                "p2": "SceneData.scalePoint3D(SceneData.variables['mpResponseVector'], 1.2)"
                            },
                            {
                                "p1": [0,0,0],
                                "p2": "SceneData.scalePoint3D(SceneData.variables['mpResponseVector'], 1.5)"
                            }
                        ],
                        "attributes": {
                            "stroke":  "#aa00aa",
                            "stroke-width": 1.5
                        },
                        "updateOn": ["alpha1", "alpha2", "beta"]
                    }]
                ]
            }
        ],
        [
            "latex-text",
            {
                "text": "{\\bf{}x}[k]",
                "position": [27,113],
                "scale": 1,
                "color": "#aa00aa"
            }
        ],
        [
            "latex-text", {
                "text": "{\\bf{}a}(\\alpha_1)",
                "position": [55,95],
                "scale": 1.0,
                "color": "#0000aa"
            }
        ],
        [
            "latex-text", {
                "text": "{\\bf{}a}(\\alpha_2)",
                "position": [63,173],
                "scale": 1.0,
                "color": "#aa0000"
            }
        ]
    ]
}