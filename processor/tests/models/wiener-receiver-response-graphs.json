{
    "canvas": {
        "width": 585,
        "height": 210
    },
    "data": [
        ["parameters", [
            {
                "type": "range",
                "name": "alpha1",
                "description": "direction of source s1",
                "initialValue": -20,
                "range": [-90, 90],
                "step": 1
            },{
                "type": "range",
                "name": "alpha2",
                "initialValue": 30,
                "range": [-90, 90],
                "description": "direction of source s2",
                "step": 1
            },{
                "type": "range",
                "name": "M",
                "initialValue": 5,
                "range": [1, 10],
                "description": "number of antenna elements",
                "step": 1
            },{
                "type": "range",
                "name": "nv1",
                "initialValue": 0.01,
                "range": [0,0.5],
                "description": "noise variance 1",
                "step": 0.01
            },{
                "type": "range",
                "name": "nv2",
                "initialValue": 2.0,
                "range": [0.5, 10],
                "description": "noise variance 2",
                "step": 0.01
            }]
        ],
        ["variables", [
            {
                "name": "Delta",
                "value": 0.5
            },{
                "name": "A",
                "value": "SceneData.beamformingChannelMatrix(SceneData.parameters.M,SceneData.variables.Delta,[SceneData.parameters.alpha1/180*Math.PI,SceneData.parameters.alpha2/180*Math.PI])",
                "updateOn": ["alpha1", "alpha2", "M"]
            },{
                "name": "Wa",
                "value": "SceneData.beamformingMatrixWienerFromANoise(SceneData.variables.A,SceneData.parameters.nv1)",
                "updateOn": ["alpha1", "alpha2", "M", "nv1"]
            },{
                "name": "Wb",
                "value": "SceneData.beamformingMatrixWienerFromANoise(SceneData.variables.A,SceneData.parameters.nv2)",
                "updateOn": ["alpha1", "alpha2", "M", "nv2"]
            },{
                "name": "w1a",
                "value": "SceneData.variables.Wa[0]",
                "updateOn": ["alpha1", "alpha2", "M", "nv1"]
            },{
                "name": "w2a",
                "value": "SceneData.variables.Wa[1]",
                "updateOn": ["alpha1", "alpha2", "M", "nv1"]
            },{
                "name": "w1b",
                "value": "SceneData.variables.Wb[0]",
                "updateOn": ["alpha1", "alpha2", "M", "nv2"]
            },{
                "name": "w2b",
                "value": "SceneData.variables.Wb[1]",
                "updateOn": ["alpha1", "alpha2", "M", "nv2"]
            }]
        ]
        ],
    "elements": [
        [ "subFigure", {
            "transform": "translate(0,0) scale(1)",
            "elements": [
                ["response-graph", {
                    "antennaArray": {
                        "M": "SceneData.parameters.M",
                        "Delta": "SceneData.variables.Delta"
                    },
                    "beamFormers": ["SceneData.variables.w1a","SceneData.variables.w2a"],
                    "width": 250,
                    "height": 150,
                    "origin": [150, 175],
                    "yDom": [0, 1.05],
                    "options":{
                        "tickValuesY": [0, 0.5, 1],
                        "tickValuesX": [-90,-60,-30,0, 30,60,90],
                        "colors": ["#3535CC","#35CC35"]
                    },
                    "updateOn": ["alpha1", "alpha2", "M", "nv1"]
                }
                ],
                ["lines", {
                    "lines": [{
                        "p1": "[150+SceneData.parameters.alpha1/90*125,175]",
                        "p2": "[150+SceneData.parameters.alpha1/90*125,25]"
                    },{
                        "p1": "[150+SceneData.parameters.alpha2/90*125,175]",
                        "p2": "[150+SceneData.parameters.alpha2/90*125,25]"
                    }],
                    "attributes": {
                        "stroke-dasharray": "4 2"
                    },
                    "updateOn": ["alpha1", "alpha2", "M"]
                }],
                ["latex-texts", {
                    "texts": [
                        {
                            "text": "eval:`\\\\sigma_n^2=${SceneData.parameters.nv1.toFixed(2)}`",
                            "position": [125,5]
                        },{
                            "text": "|({\\bf{}a}(\\alpha),{\\bf{}w})|",
                            "position": [5,5]
                        },{
                            "text": "\\text{angle }\\alpha\\text{ [degrees]}",
                            "position": [186,193]
                        },{
                            "text": "{\\bf{}w}_1",
                            "position": "[120+SceneData.parameters.alpha1/90*125,30]"
                        },{
                            "text": "{\\bf{}w}_2",
                            "position": "[165+SceneData.parameters.alpha2/90*125,30]"
                        }
                        ],
                        "updateOn": ["alpha1", "alpha2", "M", "nv1"]
                    }
                ]
        ]}],
        [ "subFigure", {
            "transform": "translate(300,0) scale(1)",
            "elements": [
                ["response-graph", {
                    "antennaArray": {
                        "M": "SceneData.parameters.M",
                        "Delta": "SceneData.variables.Delta"
                    },
                    "beamFormers": ["SceneData.variables.w1b","SceneData.variables.w2b"],
                    "width": 250,
                    "height": 150,
                    "origin": [150, 175],
                    "yDom": [0, 1.05],
                    "options":{
                        "tickValuesY": [0, 0.5, 1],
                        "tickValuesX": [-90,-60,-30,0, 30,60,90],
                        "colors": ["#3535CC","#35CC35"]
                    },
                    "updateOn": ["alpha1", "alpha2", "M", "nv2"]
                }
                ],
                ["lines", {
                    "lines": [{
                        "p1": "[150+SceneData.parameters.alpha1/90*125,175]",
                        "p2": "[150+SceneData.parameters.alpha1/90*125,25]"
                    },{
                        "p1": "[150+SceneData.parameters.alpha2/90*125,175]",
                        "p2": "[150+SceneData.parameters.alpha2/90*125,25]"
                    }],
                    "attributes": {
                        "stroke-dasharray": "4 2"
                    },
                    "updateOn": ["alpha1", "alpha2", "M"]
                }],
                ["latex-texts", {
                    "texts": [
                        {
                            "text": "eval:`\\\\sigma_n^2=${SceneData.parameters.nv2.toFixed(2)}`",
                            "position": [125,5]
                        },{
                            "text": "|({\\bf{}a}(\\alpha),{\\bf{}w})|",
                            "position": [5,5]
                        },{
                            "text": "\\text{angle }\\alpha\\text{ [degrees]}",
                            "position": [186,193]
                        },{
                            "text": "{\\bf{}w}_1",
                            "position": "[120+SceneData.parameters.alpha1/90*125,60]"
                        },{
                            "text": "{\\bf{}w}_2",
                            "position": "[165+SceneData.parameters.alpha2/90*125,60]"
                        }
                        ],
                        "updateOn": ["alpha1", "alpha2", "M", "nv2"]
                    }
                ]
        ]}]
    ]
}