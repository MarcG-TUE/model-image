{
    "canvas": {
        "width": 335,
        "height": 210
    },
    "data": [
        ["parameters", [
            {
                "type": "range",
                "name": "alpha1",
                "initialValue": -20,
                "range": [-90, 90],
                "description": "direction of source s1"
            },{
                "type": "range",
                "name": "alpha2",
                "initialValue": 30,
                "range": [-90, 90],
                "description": "direction of source s2"
            },{
                "type": "range",
                "name": "M",
                "initialValue": 5,
                "range": [1, 10],
                "description": "number of antenna elements"
            }]
        ],
        ["variables", [
            {
                "name": "Delta",
                "value": 0.5
            },{
                "name": "A",
                "value": "SceneData.beamformingChannelMatrix(SceneData.parameters.M,SceneData.variables.Delta,[SceneData.parameters.alpha1/180*Math.PI,SceneData.parameters.alpha2/180*Math.PI])",
                "updateOn": ["alpha1", "alpha2", "M"]
                },{
                "name": "W",
                "value": "SceneData.beamformingMatrixZFFromA(SceneData.variables.A)",
                "updateOn": ["alpha1", "alpha2", "M"]
                },{
                "name": "w1",
                "value": "SceneData.variables.W[0]",
                "updateOn": ["alpha1", "alpha2", "M"]
                },{
                "name": "w2",
                "value": "SceneData.variables.W[1]",
                "updateOn": ["alpha1", "alpha2", "M"]
                }]
        ]
        ],
    "elements": [
        ["response-graph", {
            "antennaArray": {
                "M": "SceneData.parameters.M",
                "Delta": "SceneData.variables.Delta"
            },
            "beamFormers": ["SceneData.variables.w1","SceneData.variables.w2"],
            "width": 300,
            "height": 150,
            "origin": [175, 175],
            "yDom": [0, 1.05],
            "options":{
                "tickValuesY": [0, 0.5, 1],
                "colors": ["#3535CC","#35CC35"]
            },
            "updateOn": ["alpha1", "alpha2", "M"]
        }
        ],
        ["lines", {
            "lines": [{
                "p1": "[175+SceneData.parameters.alpha1/15*25,175]",
                "p2": "[175+SceneData.parameters.alpha1/15*25,25]"
            },{
                "p1": "[175+SceneData.parameters.alpha2/15*25,175]",
                "p2": "[175+SceneData.parameters.alpha2/15*25,25]"
            }],
            "attributes": {
                "stroke-dasharray": "4 2"
            },
            "updateOn": ["alpha1", "alpha2", "M"]
        }],
        ["latex-texts", {
            "texts": [
                {
                    "text": "|({\\bf{}a}(\\alpha),{\\bf{}w})|",
                    "position": [5,5]
                },{
                    "text": "eval:`M=${SceneData.parameters.M.toString()}`",
                    "position": [50,45]
                },{
                    "text": "\\Delta=0.5",
                    "position": [50,65]
                },{
                    "text": "\\text{angle }\\alpha\\text{ [degrees]}",
                    "position": [236,193]
                },{
                    "text": "{\\bf{}w}_1",
                    "position": "[145+SceneData.parameters.alpha1/15*25,30]"
                },{
                    "text": "{\\bf{}w}_2",
                    "position": "[190+SceneData.parameters.alpha2/15*25,30]"
                }
                ],
                "updateOn": ["alpha1", "alpha2", "M"]
            }
        ]
    ]
}